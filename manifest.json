{
   "name": "GCELT Automating",
   "version": "1.2.4",
   "description": "Automates PDF uploads, form filling, and answer sheet checking with auto-marking for GCELT faculty. (Â©SouravBarui2025)",
   "manifest_version": 3,
   "permissions": [
      "scripting",
      "storage",
      "tabs",
      "activeTab",
      "management",
      "offscreen",
      "declarativeNetRequest",
      "declarativeNetRequestFeedback",
      "webRequest",
      "declarativeNetRequestWithHostAccess",
      "unlimitedStorage",
      "offscreen"
   ],
   "host_permissions": ["https://makaut1.ucanapply.com/*"],
   "background": {
      "service_worker": "./backgroundScripts/background.js"
   },
   "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
   },
   "content_scripts": [
      {
         "matches": ["https://makaut1.ucanapply.com/*"],
         "js": [
            "./utils.js",
            "./offscreen/libs/jspdf.umd.min.js",
            "./querySelector.js",
            "./contentScripts/ca1.js",
            "./contentScripts/ca2.js",
            "./contentScripts/ca3.js",
            "./contentScripts/ca3_scriptEvaluation.js",
            "./contentScripts/style.js",
            "./contentScripts/content.fun.js",
            "./contentScripts/content.js"
         ]
      }
   ],
   "web_accessible_resources": [
      {
         "resources": [
				"assets/*",
				"css/*",
				"offscreen/*",
				"offscreen/js/*",
				"offscreen/libs/*",
				"offscreen/offscreen.html",
				"offscreen/OCR/*",
				"offscreen/OCR/Tesseract/*",
				"offscreen/OCR/Lang/*"
			],
         "matches": ["https://makaut1.ucanapply.com/*"]
      }
   ],
   "action": {
      "default_icon": {
         "16": "assets/icons/icon.png",
         "24": "assets/icons/icon.png",
         "32": "assets/icons/icon.png"
      },
      "default_title": "GCELT Automating",
      "default_popup": "./popup/popup.html"
   },
   "icons": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon.png"
   }
}
